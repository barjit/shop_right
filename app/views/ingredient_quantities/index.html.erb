<p id="notice"><%= notice %></p>

<h1>Ingredient Quantities</h1>

<table>
  <thead>
    <tr>
      <th>Meal</th>
      <th>Ingredient</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_quantities.each do |ingredient_quantity| %>
      <tr>
        <td><%= ingredient_quantity.meal %></td>
        <td><%= ingredient_quantity.ingredient %></td>
        <td><%= ingredient_quantity.quantity %></td>
        <td><%= link_to 'Show', ingredient_quantity %></td>
        <td><%= link_to 'Edit', edit_ingredient_quantity_path(ingredient_quantity) %></td>
        <td><%= link_to 'Destroy', ingredient_quantity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

