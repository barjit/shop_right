<%= nested_form_for(meal) do |f| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :meal_image %>
    <%= f.file_field :meal_image %>
    
    <% if @meal.meal_image? %>
      <%= image_tag @meal.meal_image.url(:thumb) %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

<!-- Add ingredients -->

  <div class="container">
    <hr>
    <h3>Add ingredients</h3>

    <%= f.fields_for :ingredients do | ingredient | %>
      
      <div class="field">
        <%= ingredient.label :name %>
        <%= ingredient.text_field :name %>
      </div>

      <div class="field">
        <%= ingredient.label :quantity %>
        <%= ingredient.text_field :quantity %>
      </div>

      <div class="field">
        <%= ingredient.label :unit %>
        <%= ingredient.select :unit, options_for_select([["g", "grams"], ["cups", "cups"], ["ml", "millilitres"], ["cans", "cans"], ]) %>
      </div>

    <% end %>
    <p><%= f.link_to_add "Add another ingredient", :ingredients %></p>
  </div> 
  <hr>

<!-- ____________________ -->

  <div class="field">
    <%= f.label :method %>
    <%= f.text_area :method %>
  </div>

  <div class="field">
    <%= f.label :diet %><br />
    <%= f.select :diet, options_for_select([["Omnivore", "omnivore"],["Vegetarian", "vegetarian"], ["Vegan", "vegan"], ["Paleo", "paleo"]]) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
